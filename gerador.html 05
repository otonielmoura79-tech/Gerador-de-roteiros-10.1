<body style="background: #0f172a; color: white; font-family: sans-serif; padding: 20px;">
    <h2 style="color: #38bdf8;">üöÄ Novo Gerador</h2>
    
    <div style="margin-bottom: 20px;">
        <label>Chave API (Final odml):</label><br>
        <input type="text" id="api_key" placeholder="Cole sua chave aqui..." style="width: 100%; padding: 15px; border-radius: 8px; border: none; margin-top: 8px;">
    </div>

    <div style="margin-bottom: 20px;">
        <label>Tema do V√≠deo:</label><br>
        <textarea id="video_topic" placeholder="Sobre o que vamos escrever?" style="width: 100%; height: 120px; padding: 15px; border-radius: 8px; border: none; margin-top: 8px;"></textarea>
    </div>

    <button onclick="gerar()" style="width: 100%; padding: 20px; background: #38bdf8; color: #0f172a; border: none; font-weight: bold; border-radius: 8px; font-size: 18px;">CRIAR ROTEIRO AGORA</button>
    
    <p id="status_msg" style="color: #fbbf24; margin-top: 20px; font-weight: bold;"></p>
    <div id="output" style="background: #f8fafc; color: #1e293b; padding: 20px; border-radius: 8px; margin-top: 10px; white-space: pre-wrap; min-height: 100px;">Seu roteiro aparecer√° aqui...</div>

    <script>
        async function gerar() {
            const key = document.getElementById('api_key').value.trim();
            const topic = document.getElementById('video_topic').value.trim();
            const status = document.getElementById('status_msg');
            const result = document.getElementById('output');

            if (!key || !topic) {
                alert("Por favor, preencha a chave e o tema!");
                return;
            }

            status.innerText = "‚è≥ O Agente est√° escrevendo... aguarde.";
            result.innerText = "Processando...";

            try {
                const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-flash:generateContent?key=${key}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        contents: [{ parts: [{ text: "Crie um roteiro detalhado para YouTube sobre: " + topic }] }]
                    })
                });

                const data = await response.json();
                if (data.candidates && data.candidates[0].content.parts[0].text) {
                    result.innerText = data.candidates[0].content.parts[0].text;
                    status.innerText = "‚úÖ Roteiro Conclu√≠do!";
                } else {
                    status.innerText = "‚ùå Erro na Chave ou no Tema.";
                }
            } catch (err) {
                status.innerText = "‚ùå Erro de Conex√£o. Tente novamente.";
            }
        }
    </script>
